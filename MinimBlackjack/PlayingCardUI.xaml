<UserControl x:Class="MinimBlackjack.PlayingCardUI"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
             xmlns:local="clr-namespace:MinimBlackjack"
             mc:Ignorable="d"
             d:DesignHeight="90" d:DesignWidth="60">
    <Grid>
        <Border Background="{Binding CardBrush, RelativeSource={RelativeSource AncestorType=UserControl}}" Width="60" Height="90" CornerRadius="5" BorderBrush="White" BorderThickness="2">
            <DockPanel>
                <TextBlock Text="{Binding ValueString, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White" FontSize="16" DockPanel.Dock="Top" VerticalAlignment="Top" HorizontalAlignment="Left" Margin="5"/>
                <TextBlock Text="{Binding SuitString, RelativeSource={RelativeSource AncestorType=UserControl}}" Foreground="White" FontSize="16" DockPanel.Dock="Bottom" VerticalAlignment="Bottom" HorizontalAlignment="Left" Margin="5"/>
            </DockPanel>
        </Border>
    </Grid>
</UserControl>
