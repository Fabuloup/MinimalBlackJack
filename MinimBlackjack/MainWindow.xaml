<Window x:Class="MinimBlackjack.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:uc="clr-namespace:MinimBlackjack"
        xmlns:local="clr-namespace:MinimBlackjack"
        xmlns:ext="clr-namespace:MinimBlackjack.Extensions"
        mc:Ignorable="d"
        Title="BlackJack" Height="450" Width="800">
    <Window.Resources>
        <ext:BoolToVisibilityConverter x:Key="BoolToVisibility"/>
    </Window.Resources>
    <Grid>
        <!-- Titre et barre supérieure -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0,10,0,0">
            <StackPanel Orientation="Vertical" Margin="10,0">
                <Button Content="RESET" Width="80" Height="40" Margin="10,0" Foreground="#bec3c1" Background="Transparent" BorderBrush="Transparent" Click="ResetButton_Click"/>
                <StackPanel Orientation="Horizontal">
                    <Button Width="20" Height="20" Margin="5,0" Foreground="#bec3c1" Background="White" BorderBrush="#bec3c1" Visibility="{Binding HasGameNotStarted, Converter={StaticResource BoolToVisibility}}" Click="RemoveBetButton_Click">
                        <TextBlock Text="-" LineHeight="22" />
                    </Button>
                    <TextBlock Text="{Binding CurrentBet, StringFormat=Bet: \{0\}€}" FontSize="14" MinWidth="65" Foreground="#bec3c1"/>
                    <Button Width="20" Height="20" Margin="5,0" Foreground="#bec3c1" Background="White" BorderBrush="#bec3c1" Visibility="{Binding HasGameNotStarted, Converter={StaticResource BoolToVisibility}}" Click="PlaceBetButton_Click">
                        <TextBlock Text="+" LineHeight="22" />
                    </Button>
                </StackPanel>
            </StackPanel>
            <TextBlock Text="BLACKJACK" FontSize="24" FontWeight="Bold" Foreground="#c4acc8" Margin="20,0" VerticalAlignment="Center"/>

            <uc:PlayingCardUI Margin="50,0">
                <uc:PlayingCardUI.RenderTransform>
                    <RotateTransform Angle="-25" CenterX="30" CenterY="45"/>
                </uc:PlayingCardUI.RenderTransform>
            </uc:PlayingCardUI>
            <uc:PlayingCardUI Margin="-150,0,0,-35">
                <uc:PlayingCardUI.RenderTransform>
                    <RotateTransform Angle="-20" CenterX="30" CenterY="45"/>
                </uc:PlayingCardUI.RenderTransform>
            </uc:PlayingCardUI>

        </StackPanel>

        <!-- Cartes centrales -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="40,100,0,0">
            <!-- Utilisation d'un ItemsControl pour afficher dynamiquement la main du joueur -->
            <ItemsControl ItemsSource="{Binding DealerCards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <uc:PlayingCardUI PlayingCard="{Binding}" Margin="-40,5,5,5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <!-- Cartes inférieures -->
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="40,0,0,100">
            <ItemsControl ItemsSource="{Binding PlayerCards}">
                <ItemsControl.ItemsPanel>
                    <ItemsPanelTemplate>
                        <StackPanel Orientation="Horizontal"/>
                    </ItemsPanelTemplate>
                </ItemsControl.ItemsPanel>
                <ItemsControl.ItemTemplate>
                    <DataTemplate>
                        <uc:PlayingCardUI PlayingCard="{Binding}" Margin="-40,5,5,5"/>
                    </DataTemplate>
                </ItemsControl.ItemTemplate>
            </ItemsControl>
        </StackPanel>

        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="0,0,0,40">
            <TextBlock Text="{Binding StatusMessage}" FontSize="20" FontWeight="Bold" Foreground="#bec3c1"/>
        </StackPanel>

        <!-- Statistiques à gauche -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Left" VerticalAlignment="Bottom" Margin="20,0,0,40">
            <TextBlock Text="{Binding Wins, StringFormat=Wins: \{0\}}" Foreground="#bec3c1" FontSize="14"/>
            <TextBlock Text="{Binding Losses, StringFormat=Losses: \{0\}}" Foreground="#bec3c1" FontSize="14"/>
            <TextBlock Text="{Binding PlayerMoney, StringFormat=Total: \{0\}€}" Foreground="#bec3c1" FontSize="14"/>
        </StackPanel>

        <!-- Total et boutons à droite -->
        <StackPanel Orientation="Vertical" HorizontalAlignment="Right" VerticalAlignment="Bottom" Margin="0,0,20,40">
            <TextBlock Text="Total: 16" Foreground="White" FontSize="16" FontWeight="Bold" HorizontalAlignment="Center"/>
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,10,0,0">
                <Button Content="Start game" Width="80" Height="20" Margin="5" Background="White" BorderBrush="#bec3c1" Click="StartGameButton_Click" Visibility="{Binding HasGameNotStarted, Converter={StaticResource BoolToVisibility}}"/>
                <Button Content="Hit" Width="80" Height="20" Margin="5" Background="White" BorderBrush="#bec3c1" Click="HitButton_Click" Visibility="{Binding IsGameRunning, Converter={StaticResource BoolToVisibility}}"/>
                <Button Content="Stand" Width="80" Height="20" Margin="5" Background="White" BorderBrush="#bec3c1" Click="StandButton_Click" Visibility="{Binding IsGameRunning, Converter={StaticResource BoolToVisibility}}"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
